<%- include('../templates/head.ejs', {titulo: 'TITULO'}) %>

<%- include('../templates/navbar.ejs') %> 

<% if(ventas.length == 0) { %>
    <div class="container text-center text-muted">
        <h1>ACTUALMENTE NO HAS VENDIDO NINGUNA SKIN</h1>
    </div>
<% }else { %>
    <div class="p-md-4 p-sm-0 d-flex justify-content-center align-items-center">
        <div class="table-responsive">
            <table class="table table-striped table-hover" style="width: 80vw;">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Skin</th>
                        <th scope="col">Comprador</th>
                        <th scope="col">Vendedor</th>
                        <th scope="col">Precio</th>
                    </tr>
                </thead>
        
                <tbody>
                    <% ventas.forEach(venta => { %>
                        <tr>
                            <th scope="row"> <%= venta.id_venta %> </td>
                            <td> <%= venta.nombre %> </td>
                            <td> <%= venta.comprador %> </td>
                            <td> <%= venta.vendedor %> </td>
                            <td> <%= venta.precio %>$ </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
<% } %>


<%- include('../templates/footer.ejs') %> 