<%- include('../templates/head.ejs', {titulo: 'TITULO'}) %>

<%- include('../templates/navbar.ejs') %> 

<div class="container p-4">
    <%- include('navbarAdmin.ejs')  %> 
</div>

<div class="container p-4">
    <div class="d-flex justify-content-center row">
        <div class="col-8">

            <form action="" method="POST">
                
                <div class="form-group">
                    <label for="nombre"><h5>Nombre: </h5></label>
                    <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre">
                </div><br>

                <div class="form-group">
                    <label for="precio"><h5>Precio: </h5></label>
                    <input type="number" class="form-control" id="precio" name="precio" placeholder="Precio">
                </div><br>

                <div class="form-group">
                    <label for="img"><h5>Imagen: </h5></label>
                    <input type="text" class="form-control" id="img" name="foto" placeholder="/img/nombreFoto.png">
                </div><br>

                <div class="form-group">
                    <label for="categoria"><h5>Categoria: </h5></label>
                    <select name="categoria" id="categoria" class="form-select" aria-label="Default Select">
                        <option value="AK47"> AK-47 </option>
                        <option value="M4A4"> M4A4 </option>
                        <option value="SSG"> SGG </option>
                        <option value="AWP"> AWP </option>
                        <option value="AUG"> AUG </option>
                        <option value="DEAGLE"> DEAGLE </option>
                        <option value="USP"> USP </option>
                        <option value="GLOCK18"> GLOCK-18 </option>
                        <option value="P250"> P250 </option>
                        <option value="P90"> P90 </option>
                        <option value="MAG7"> MAG-7 </option>
                        <option value="MP9"> MP9 </option>
                    </select>
                    <!-- <input type="text" class="form-control" id="categoria" name="categoria" placeholder="Categoria"> -->
                </div><br>

                <div class="form-group">
                    <label for="descripcion"><h5>Descripcion: </h5></label>
                    <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Descripcion">
                </div><br>

                <div class="d-flex justify-content-around">
                    <button type="submit" class="btn btn-success btn-block mx-2 text-white col-md-6 col-12">
                        <i class="far fa-save"></i> Guardar 
                    </button>

                    <a href="/skins" class="btn btn-primary btn-block text-white  col-md-6 col-12">
                        <i class="fas fa-undo"></i> Volver 
                    </a>
                </div>
               
            </form>

        </div>
    </div>
</div>

<%- include('../templates/footer.ejs') %> 